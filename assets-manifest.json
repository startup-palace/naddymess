{
	"name": "naddymess",
	"build": "build",
	"tasks" : {
		"js": [
			{
				"name": "website",
				"dest": "build/js",
				"vendors": [
					"node_modules/jquery/dist/jquery.js",
					"node_modules/popper.js/dist/umd/popper.js",
					"node_modules/bootstrap/dist/js/bootstrap.js",
					"node_modules/timeago.js/dist/timeago.js",
					"src/_js/_cookieChoices.js"
				],
				"src": [
					"src/_js/main.js"
				],
				"watch": [
					"src/_js/**/*.js"
				]
			}
		],
		"scss": [
			{
				"name": "website",
				"dest": "build/css",
				"critical-dest": "src/_temp/css",
				"src": [
					"src/_scss/main.scss"
				],
				"watch": [
					"src/_scss/**/*.scss",
					"src/_scss/**/**/*.scss"
				]
			}
		],
		"rev": [
			{
				"src": [
					"build/css/**",
					"build/js/**"
				],
				"base": "build",
				"dest": "src/_data"
			}
		],
		"copy": [
			{
				"src": [
					"src/_img/**"
				],
				"dest": "build/img"
			}
		],
		"jekyll-build": {
			"watch": [
				"src/[^_]**",
				"src/**/**",
				"src/_includes/**",
				"src/_layouts/**"
			]
		}
	}
}
